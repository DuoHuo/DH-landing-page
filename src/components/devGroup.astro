---
import ContentSection from "~/components/content-section.astro";
import CompatibilityList from "~/components/compatibility-list.astro";

const frameworks = [
  {
    title: "JavaScript",
    icon: "vscode-icons:file-type-js-official",
    url: "https://developer.mozilla.org/",
  },
  {
    title: "Java",
    icon: "vscode-icons:file-type-java",
    url: "https://java.com/",
  },
  {
    title: "Python",
    icon: "vscode-icons:file-type-python",
    url: "https://python.org/",
  },
  {
    title: "C++",
    icon: "vscode-icons:file-type-cpp3",
  },
  {
    title: "Go",
    icon: "vscode-icons:file-type-go-gopher",
    url: "https://golang.org/",
  },
  {
    title: "Rust",
    icon: "vscode-icons:file-type-light-rust",
    url: "https://rust-lang.org/",
  },
];

const projects = [
  {
    title: "QQLinux",
    icon: "mdi:folder",
    url: "https://github.com/Icalingua-plus-plus/Icalingua-plus-plus",
  },
  {
    title: "Hexo#",
    icon: "mdi:folder",
    url: "https://github.com/BeiyanYunyi/HexoSharp",
  },
  {
    title: "CDN加速",
    icon: "mdi:folder",
    url: "https://github.com/BeiyanYunyi/CloudflareSpeedTest-Rust",
  },
  {
    title: "摩登UI引擎",
    icon: "mdi:folder",
    url: "https://github.com/BloCamLimb/ModernUI",
  },
  {
    title: "一键同学互评",
    icon: "mdi:folder",
    url: "https://github.com/Dustella/nuist-auto-peer-evaluation",
  },
  {
    title: "通量网络mod",
    icon: "mdi:folder",
    url: "https://github.com/SonarSonic/Flux-Networks",
  },
];
const NUISTprojects = [
  {
    title: "NUISTcraft",
    icon: "mdi:computer",
    url: "https://nuistcraft.com",
  },
  {
    title: "期末考试小助手",
    icon: "mdi:book",
    url: "https://nuistshare.cn",
  },
];
---

<ContentSection title="开发" id="dev-group">
  <Fragment slot="lead">
    用<span class="text-primary font-mono">{`<`}代码{`>`}</span>的洪流<br
    />实现我们的<span class="gradient-text">雄心</span>
  </Fragment>
  <CompatibilityList
    title="语言"
    data={frameworks}
    grid="grid grid-cols-2 gap-8 sm:grid-cols-3 md:grid-cols-6"
  />
  <CompatibilityList
    title="拳头项目"
    data={projects}
    grid="grid grid-cols-2 gap-8 sm:grid-cols-3 md:grid-cols-6"
  />
  <CompatibilityList
    title="信大特殊服务"
    data={NUISTprojects}
    grid="grid grid-cols-2 gap-8 sm:grid-cols-3 md:grid-cols-2"
  />
</ContentSection>
